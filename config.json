{
    "name": "DogBreed_MyDenseNet121_lr_step100",
    "n_gpu": 1,
    "arch": {
        "type": "MyDenseNetModel",
        "args": {}
    },
    "data_loader": {
        "type": "DogBreedDataLoader",
        "args": {
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.1,
            "weight_decay": 0.0001,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": 0,
        "tensorboard": false
    }
}